{
  "description": "Pipeline for normalizing Zeek notice.log",
  "processors": [
    {
      "script": {
        "lang": "painless",
        "source": "ctx.event.created = ctx['@timestamp']; ctx['@timestamp'] = (long)ctx['zeek']['notice']['ts'] * 1000; ctx.zeek.notice.remove('ts');"
      }
    },
    {
      "set": {
        "field": "destination.ip",
        "value": "{{destination.address}}",
        "if": "ctx.destination?.address != null"
      }
    },
    {
      "set": {
        "field": "source.ip",
        "value": "{{source.address}}",
        "if": "ctx.source?.address != null"
      }
    },
    {
      "set": {
        "field": "event.id",
        "value": "{{zeek.session_id}}",
        "if": "ctx.zeek.session_id != null"
      }
    },
    {
      "geoip": {
        "if": "ctx.source?.geo == null",
        "field": "source.ip",
        "target_field": "source.geo",
        "ignore_missing": true
      }
    },
    {
      "geoip": {
        "if": "ctx.destination?.geo == null",
        "field": "destination.ip",
        "target_field": "destination.geo",
        "ignore_missing": true
      }
    },
    {
      "geoip": {
        "if": "ctx.source?.autonomous_system == null",
        "database_file": "GeoLite2-ASN.mmdb",
        "field": "source.ip",
        "target_field": "source.autonomous_system",
        "properties": [
          "asn",
          "organization_name"
        ],
        "ignore_missing": true
      }
    },
    {
      "geoip": {
        "if": "ctx.destination?.autonomous_system == null",
        "database_file": "GeoLite2-ASN.mmdb",
        "field": "destination.ip",
        "target_field": "destination.autonomous_system",
        "properties": [
          "asn",
          "organization_name"
        ],
        "ignore_missing": true
      }
    },
    {
      "rename": {
        "field": "source.autonomous_system.asn",
        "target_field": "source.autonomous_system.number",
        "ignore_missing": true
      }
    },
    {
      "rename": {
        "field": "destination.autonomous_system.asn",
        "target_field": "destination.autonomous_system.number",
        "ignore_missing": true
      }
    },
    {
      "rename": {
        "field": "source.autonomous_system.organization_name",
        "target_field": "source.autonomous_system.organization.name",
        "ignore_missing": true
      }
    },
    {
      "rename": {
        "field": "destination.autonomous_system.organization_name",
        "target_field": "destination.autonomous_system.organization.name",
        "ignore_missing": true
      }
    }
  ],
  "on_failure" : [{ 
    "set" : { 
      "field" : "error.message", 
      "value" : "{{ _ingest.on_failure_message }}" 
    } 
  }]
}
